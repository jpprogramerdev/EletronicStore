@{
    ViewData["Title"] = "Cadastro Cliente";
}

<form>
    <div class="form-group">
        <label for="nome-cliente">Nome completo:</label>
        <input type="text" class="form-control" id="nome-cliente"placeholder="Nome completo">
    </div>
    <div class="form-group">
        <label for="email-cliente">Email:</label>
        <input type="email" class="form-control" id="email-cliente" placeholder="exemplo@email.com">
    </div>
    <div class="form-group">
        <label for="cpf-cliente">CPF:</label>
        <input type="text" class="form-control" id="cpf-cliente" placeholder="CPF">
    </div>
    <div class="form-group">
        <label for="genero-cliente">Genero:</label>
        <select class="form-control" id="genero-cliente">
            <option value="">Masculino</option>
            <option value="">Feminino</option>
            <option value="">Outro</option>
        </select>
    </div>
    <div class="form-group">
        <label for="telefone-cliente">Telefone:</label>
        <input type="text" class="form-control" id="telefone-cliente" placeholder="Telefone">
    </div>

    <!--Cartão-->
    <fieldset class="div-form-field">
        <h5>Cartão</h5>
        <div class="form-group">
            <label for="apelido-cartao-cliente">Apelido Cartão:</label>
            <input type="text" class="form-control" id="apelido-cartao-cliente" placeholder="Apelido">
        </div>
        <div class="form-group">
            <label for="cep-endereco-cliente">Numero:</label>
            <input type="text" class="form-control" id="numero-cartao-cliente" placeholder="Numero">
        </div>
        <div class="form-group">
            <label for="tipoLogradouro-endereco-cliente">Bandeira :</label>
            <select class="form-control" id="bandeira-cartao-cliente">
                <option value="">MasterCard</option>
                <option value="">Viza</option>
            </select>
        </div>
        <div class="form-group">
            <label for="logradouro-endereco-cliente">Data validade:</label>
            <input type="text" class="form-control" id="dtValidade-cartao-cliente" placeholder="MM/AA">
        </div>
        <div class="form-group">
            <label for="numero-endereco-cliente">CVV:</label>
            <input type="text" class="form-control" id="cvv-cartao-cliente" placeholder="Numero">
        </div>
        <div class="form-group">
            <label for="funcao-cartao-cliente">Função:</label>
            <select class="form-control" id="funcao-cartao-cliente">
                <option value="">Débito</option>
                <option value="">Crédito</option>
            </select>
        </div>
    </fieldset>

    <!--Endereço-->
    <fieldset class="div-form-field">
        <h5>Endereço</h5>
        <div class="form-group">
            <label for="apelido-endereco-cliente">Apelido endereço:</label>
            <input type="text" class="form-control" id="apelido-endereco-cliente" placeholder="Apelido">
        </div>
        <div class="form-group">
            <label for="cep-endereco-cliente">CEP:</label>
            <input type="text" class="form-control" id="cep-endereco-cliente" placeholder="CEP">
        </div>
        <div class="form-group">
            <label for="tipoLogradouro-endereco-cliente">Tipo Logradouro:</label>
            <select class="form-control" id="tipoLogradouro-endereco-cliente">
                <option value="">Avenida</option>
                <option value="">Rua</option>
                <option value="">Travessa</option>
            </select>
        </div>
        <div class="form-group">
            <label for="logradouro-endereco-cliente">Logradouro:</label>
            <input type="text" class="form-control" id="logradouro-endereco-cliente" placeholder="Logradouro">
        </div>
        <div class="form-group">
            <label for="numero-endereco-cliente">Numero:</label>
            <input type="text" class="form-control" id="numero-endereco-cliente" placeholder="Numero">
        </div>
        <div class="form-group">
            <label for="bairro-endereco-cliente">Bairro:</label>
            <input type="text" class="form-control" id="bairro-endereco-cliente" placeholder="Bairro">
        </div>
        <div class="form-group">
            <label for="tipoLogradouro-endereco-cliente">Pais:</label>
            <select class="form-control" id="tipoLogradouro-endereco-cliente">
                <option value="">Brasil</option>
                <option value="">Estados Unidos</option>
                <option value="">Canada</option>
            </select>
        </div>
        <div class="form-group">
            <label for="tipoLogradouro-endereco-cliente">Estado:</label>
            <select class="form-control" id="tipoLogradouro-endereco-cliente">
                <option value="">São Paulo</option>
                <option value="">Minas Gerais</option>
                <option value="">Rio de Janeiro</option>
            </select>
        </div>
        <div class="form-group">
            <label for="tipoLogradouro-endereco-cliente">Cidade:</label>
            <select class="form-control" id="tipoLogradouro-endereco-cliente">
                <option value="">Mogi das Cruzes</option>
                <option value="">São Paulo</option>
                <option value="">Suzano</option>
            </select>
        </div>
        <div class="form-group">
            <label for="numero-endereco-cliente">Observação:</label>
            <input type="text" class="form-control" id="numero-endereco-cliente" placeholder="Observação">
        </div>
    </fieldset>

    <div class="form-group">
        <label for="pwd-cliente">Senha:</label>
        <input type="password" class="form-control" id="pwd-cliente">
    </div>

    <div class="form-group">
        <label for="pwd-confirm-cliente">Confirmar Senha:</label>
        <input type="password" class="form-control" id="pwd-confirm-cliente">
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>